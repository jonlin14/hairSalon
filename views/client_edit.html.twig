<html>
    <head>
        <title>Update this Stylist</title>
    </head>
    <body>
        <form action="/client/{{ client.getClientId }}" method="post">
            <input name="_method" type="hidden" value="patch">

            <label for="new_name_client">Rename your Client:</label>
            <input id="new_name_client" name="new_name_client" type="text">

            <button type="submit">Update</button>
        </form>

        <form action="/client/{{ client.getClientId }}" method="post">
            <input name="_method" type="hidden" value="delete">

            <button type="submit">Delete this Client</button>

        </form>
        <a href="/">Go back Home</a>
    </body>
    
</html>
